<?xml version="1.0" encoding="UTF-8"?>

<includes>

	<include name="BGFade">
		<animation effect="fade" start="0" end="100" time="250">Visible</animation>
		<animation effect="fade" start="100" end="0" time="250" delay="100">Hidden</animation>
		<animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="250" delay="100">WindowClose</animation>
	</include>

	<include name="BGFade2">
		<animation effect="fade" start="0" end="100" time="250">Visible</animation>
		<animation effect="fade" start="100" end="0" time="250" delay="100">Hidden</animation>
		<animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="250" delay="100">WindowClose</animation>
	</include>

	<include name="BGFade3">
		<animation effect="fade" start="0" end="100" time="250" condition="Window.Previous(home) | Window.Next(addonbrowser)">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="250" condition="Window.Next(home) | Window.Next(addonbrowser)">WindowClose</animation>
	</include>

	<include name="FadeandZoom">
	
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="300" delay="400" />
			<effect type="zoom" start="95" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="95" center="960,540" time="200" />
		</animation>
	
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="300" delay="400" />
			<effect type="zoom" start="120" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="110" center="960,540" time="200" />
		</animation>
			
	</include>

	<include name="FadeandZoom2">
	
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="300" delay="400" />
			<effect type="zoom" start="120" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="110" center="960,540" time="200" />
		</animation>
			
	</include>

	<include name="FadeandZoomNumeric">
	
		<animation type="Visible" condition="Window.Previous(virtualkeyboard)">
			<effect type="fade" start="0" end="100" time="0" />
		</animation>
		<animation type="Hidden" condition="Window.Next(virtualkeyboard)">
			<effect type="fade" start="100" end="0" time="0" />
		</animation>
	
		<animation type="WindowOpen" condition="Window.Previous(virtualkeyboard)">
			<effect type="fade" start="0" end="100" time="0" />
		</animation>
		<animation type="WindowClose" condition="Window.Next(virtualkeyboard)">
			<effect type="fade" start="100" end="0" time="0" />
		</animation>
	
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="300" delay="400" />
			<effect type="zoom" start="95" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="95" center="960,540" time="200" />
		</animation>
	
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="300" delay="400" />
			<effect type="zoom" start="120" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="110" center="960,540" time="200" />
		</animation>
			
	</include>

	<include name="NotificationFade">
		<animation effect="fade" start="0" end="100" time="450">Visible</animation>
		<animation effect="fade" start="100" end="0" time="450" delay="100">Hidden</animation>
		<animation effect="fade" start="0" end="100" time="450">WindowOpen</animation>
		<animation effect="fade" start="100" end="0" time="450" delay="100">WindowClose</animation>
	</include>
	
	<include name="MenuBackgroundZoom">
		<animation effect="zoom" start="100" end="95" time="250" center="960,540" condition="ControlGroup(9000).HasFocus | Window.IsActive(shutdownmenu) | Window.IsActive(contextmenu) | Window.IsActive(movieinformation) | Window.IsActive(DialogAlbumInfo.xml) | Window.IsActive(DialogSongInfo.xml)">Conditional</animation>
		<animation effect="fade" start="100" end="0" time="250" condition="Window.IsActive(movieinformation) | Window.IsActive(DialogAlbumInfo.xml) | Window.IsActive(DialogSongInfo.xml)">Conditional</animation>
	</include>

	<include name="ViewAnimation">
	
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="400" delay="400" />
			<effect type="zoom" start="95" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="95" center="960,540" time="200" />
		</animation>
	
		<animation type="WindowOpen">
			<effect type="fade" start="0" end="100" time="400" delay="400" />
			<effect type="zoom" start="120" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="WindowClose">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="95" center="960,540" time="200" />
		</animation>
			
	</include>

	<include name="ViewAnimation2">
	
		<animation type="Visible">
			<effect type="fade" start="0" end="100" time="400" delay="400" />
			<effect type="zoom" start="95" end="100" center="960,540" time="200" delay="400" />
		</animation>
		<animation type="Hidden">
			<effect type="fade" start="100" end="0" time="200" />
			<effect type="zoom" start="100" end="95" center="960,540" time="200" />
		</animation>
			
	</include>
	
	<include name="PosterMenuFade">
		<animation effect="fade" start="100" end="40" time="250" condition="ControlGroup(9000).HasFocus | Window.IsVisible(shutdownmenu) | Window.IsVisible(contextmenu) | Window.IsVisible(selectdialog)">Conditional</animation>
	</include>

</includes>